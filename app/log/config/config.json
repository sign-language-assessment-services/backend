{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s :: %(levelname)-8s :: %(name)s :: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S %Z"
        },
        "detailed": {
            "format": "%(asctime)s :: %(levelname)-8s :: %(name)s :: %(funcName)s:%(lineno)d :: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S %Z"
        }
    },
    "filters": {
        "healthcheck_filter": {
            "()": "app.log.config.filters.HealthCheckFilter"
        },
        "warnings_and_below_filter": {
            "()": "app.log.config.filters.WarningsAndBelowFilter"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout",
            "filters": ["warnings_and_below_filter"]
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "detailed",
            "stream": "ext://sys.stderr"
        }
    },
    "loggers": {
        "uvicorn.access": {
            "filters": ["healthcheck_filter"],
            "propagate": true
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["stdout", "stderr"]
    }
}
