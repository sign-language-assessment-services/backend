{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(levelname)-8s - %(name)s - %(message)s",
            "datefmt": "%Y-%m-%d %H%M%S"
        },
        "detailed": {
            "format": "%(asctime)s - %(levelname)-8s - %(name)s - %(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%Y-%m-%d %H%M%S"
        }
    },
    "filters": {
        "healthcheck_filter": {
            "()": "app.log.config.filters.HealthCheckFilter"
        },
        "warnings_and_below_filter": {
            "()": "app.log.config.filters.WarningsAndBelowFilter"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout",
            "filters": ["healthcheck_filter", "warnings_and_below_filter"]
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "detailed",
            "stream": "ext://sys.stderr"
        }
    },
    "loggers": {
        "app": {
            "level": "DEBUG",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "fastapi": {
            "level": "ERROR",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "uvicorn": {
            "level": "WARNING",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "uvicorn.error": {
            "level": "ERROR",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "sqlalchemy": {
            "level": "WARNING",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "sqlalchemy.engine": {
            "level": "ERROR",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "sqlalchemy.pool": {
            "level": "WARNING",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "sqlalchemy.orm": {
            "level": "ERROR",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        },
        "alembic": {
            "level": "DEBUG",
            "handlers": ["stdout", "stderr"],
            "propagate": false
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["stdout", "stderr"]
    }
}
